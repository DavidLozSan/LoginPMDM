<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_main">

    <fragment
        android:id="@+id/fragment_main"
        android:name="edu.iesam.loginexam1eval.feature.login.presentation.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_to_sign_up"
            app:destination="@+id/fragment_sign_up" />
        <action
            android:id="@+id/action_main_to_sign_in"
            app:destination="@+id/fragment_sign_in" />
    </fragment>

    <fragment
        android:id="@+id/fragment_sign_up"
        android:name="edu.iesam.loginexam1eval.feature.login.presentation.SignUpFragment"
        android:label="SignIn"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_sign_up_to_welcome"
            app:destination="@+id/fragment_welcome" />
        <action
            android:id="@+id/action_back_to_main"
            app:destination="@id/fragment_main" />
    </fragment>

    <fragment
        android:id="@+id/fragment_sign_in"
        android:name="edu.iesam.loginexam1eval.feature.login.presentation.SignInFragment"
        android:label="SignIn"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_sign_in_to_welcome"
            app:destination="@+id/fragment_welcome" />
        <action
            android:id="@+id/action_back_to_main"
            app:destination="@id/fragment_main" />
    </fragment>

    <fragment
        android:id="@+id/fragment_welcome"
        android:name="edu.iesam.loginexam1eval.feature.login.presentation.WelcomeFragment"
        android:label="WelcomeFragment"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcome_to_main"
            app:destination="@id/fragment_main" />
    </fragment>

</navigation>